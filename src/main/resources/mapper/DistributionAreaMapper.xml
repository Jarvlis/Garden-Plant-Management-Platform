<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.plants.DAO.DistributionAreaDAO">

    <resultMap id="BaseResultMap" type="org.plants.po.PlantMaintenance">
        <id property="DistributionAreaID" column="DistributionAreaID" jdbcType="INTEGER"/>
        <result property="Province" column="Province" jdbcType="VARCHAR"/>
        <result property="City" column="City" jdbcType="VARCHAR"/>
        <result property="Country" column="Country" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insert" keyColumn="DistributionAreaID" keyProperty="DistributionAreaID" parameterType="org.plants.po.DistributionArea" useGeneratedKeys="true">
        insert into DistributionArea
            ( Province,City,Country)
        values
            ( #{Province},#{City},#{Country})
    </insert>

    <delete id="delete" parameterType="INTEGER">
        delete from DistributionArea
        where  DistributionAreaID = #{DistributionAreaID}
    </delete>

    <update id="update" parameterType="org.plants.po.DistributionArea">
        update DistributionArea
        <set>
            <if test="Province != null">
                Province = #{Province},
            </if>
            <if test="City != null">
                City = #{City},
            </if>
            <if test="userId != null">
                userId = #{userId},
            </if>
            <if test="Country != null">
                Country = #{Country},
            </if>
        </set>
        where   DistributionAreaID = #{DistributionAreaID}
    </update>



    <select id="selectById" parameterType="INTEGER" resultMap="BaseResultMap">
        select
            *
        from DistributionArea
        where  DistributionAreaID = #{DistributionAreaID}
    </select>

    <select id="selectByProvince" parameterType="String" resultMap="BaseResultMap">
        select
            *
        from DistributionArea
        where  Province = #{Province}
    </select>

    <select id="selectByCity" parameterType="String" resultMap="BaseResultMap">
        select
            *
        from City
        where  City = #{City}
    </select>

    <select id="selectByCountry" parameterType="String" resultMap="BaseResultMap">
        select
            *
        from Country
        where  Country = #{Country}
    </select>
</mapper>
